
<div class="user-panel">
    <img src="{{image}}/large" />
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-lg-2">Navn</label>
            <div class="col-lg-10">
                {{name}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2">Telefon</label>
            <div class="col-lg-10">
                {{formatPhone phone}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2">Mail</label>
            <div class="col-lg-10">
                <a href="mailto:{{mail}}">{{mail}}</a>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2">Prosjekt</label>
            <div class="col-lg-10">
                {{project}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2">Kj√∏nn</label>
            <div class="col-lg-10">
                <select id="sex">
                    {{sexHelper sex}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2">Status</label>
            <div class="col-lg-10">
                <select id="memberstatus">
                    {{activeHelper active}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="button" class="btn btn-success" data-js-save-user>Lagre</button>
            </div>
        </div>
    </form>


</div>